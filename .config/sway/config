set $mod Mod4
set $left h
set $down j
set $up k
set $right l
set $term alacritty
set $menu bemenu-run

floating_modifier $mod normal

smart_borders on
default_border pixel 2


output eDP-1 resolution 1920x1080 position 0 0
output DP-3 resolution 3840x2160 position 1920 0



# Utilities:
# Special keys to adjust volume via PulseAudio
bindsym --locked XF86AudioMute exec pactl set-sink-mute \@DEFAULT_SINK@ toggle
bindsym --locked XF86AudioLowerVolume exec pactl set-sink-volume \@DEFAULT_SINK@ -5%
bindsym --locked XF86AudioRaiseVolume exec pactl set-sink-volume \@DEFAULT_SINK@ +5%
bindsym --locked XF86AudioMicMute exec pactl set-source-mute \@DEFAULT_SOURCE@ toggle
# Special keys to adjust brightness via brightnessctl
bindsym --locked XF86MonBrightnessDown exec brightnessctl set 5%-
bindsym --locked XF86MonBrightnessUp exec brightnessctl set 5%+
# Special key to take a screenshot with grim


input type:keyboard {
    repeat_delay 300
    repeat_rate 50
}


# mod
bindsym $mod+Return exec $term
bindsym $mod+q kill
bindsym $mod+space exec $menu
bindsym $mod+Tab workspace back_and_forth
bindsym $mod+u workspace prev
bindsym $mod+i workspace next
bindsym $mod+$left focus left
bindsym $mod+$down focus down
bindsym $mod+$up focus up
bindsym $mod+$right focus right
bindsym $mod+1 workspace number 1
bindsym $mod+2 workspace number 2
bindsym $mod+3 workspace number 3
bindsym $mod+4 workspace number 4
bindsym $mod+5 workspace number 5
bindsym $mod+6 workspace number 6
bindsym $mod+7 workspace number 7
bindsym $mod+8 workspace number 8
bindsym $mod+9 workspace number 9
bindsym $mod+0 workspace number 10
bindsym $mod+e layout toggle split
bindsym $mod+f fullscreen
bindsym $mod+a focus parent
bindsym $mod+s mode $screenshot
bindsym $mod+minus scratchpad show

# mod+shift
bindsym $mod+Shift+n mode $network
bindsym $mod+Shift+s mode $system
bindsym $mod+Shift+minus move scratchpad
bindsym $mod+Shift+space floating toggle
bindsym $mod+Shift+1 move container to workspace number 1
bindsym $mod+Shift+2 move container to workspace number 2
bindsym $mod+Shift+3 move container to workspace number 3
bindsym $mod+Shift+4 move container to workspace number 4
bindsym $mod+Shift+5 move container to workspace number 5
bindsym $mod+Shift+6 move container to workspace number 6
bindsym $mod+Shift+7 move container to workspace number 7
bindsym $mod+Shift+8 move container to workspace number 8
bindsym $mod+Shift+9 move container to workspace number 9
bindsym $mod+Shift+0 move container to workspace number 10
bindsym $mod+Shift+Right move right
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+$right move right
bindsym $mod+Shift+$up move up
bindsym $mod+Shift+$down move down
bindsym $mod+Shift+$left move left
bindsym $mod+Shift+r reload
bindsym $mod+p mode $PDF
bindsym $mod+w mode $websearch
bindsym $mod+n scratchpad show
bindsym $mod+t fullscreen,focus right,fullscreen

# ------------------------------------------
# ------------------------------------------
# modes

set $system system
mode $system  {
    # bindsym l exec systemctl suspend && swaylock
    # Exit sway (logs you out of your Wayland session)
    bindsym e exit
    bindsym i exec $term, floating enable, mode "default"
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

set $PDF pdf
mode $PDF  {
    bindsym o mode "default", exec ~/.config/sway/scripts/open_pdf
    bindsym b mode "default", exec ~/.config/sway/scripts/open_pdf ~/res/books
    bindsym s mode "default", exec ~/.config/sway/scripts/open_pdf ~/res/scripts
    bindsym e mode "default", exec ~/.config/sway/scripts/open_pdf ~/res/exercises
    bindsym l mode "default", exec ~/.config/sway/scripts/open_pdf ~/res/lecture_slides
    bindsym p mode "default", exec ~/.config/sway/scripts/open_pdf ~/res/papers
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

set $websearch websearch
mode $websearch {
    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym b           mode default, exec "~/.config/sway/scripts/bookmarks open"
    bindsym w           mode default, exec "~/.config/sway/scripts/websearch wikipedia"
    bindsym g           mode default, exec "~/.config/sway/scripts/websearch github"
    # wiby: search engine for the *c*lassic web
    bindsym c           mode default, exec "~/.config/sway/scripts/websearch wiby"
    bindsym s           mode default, exec "~/.config/sway/scripts/websearch scholar"
    bindsym d           mode default, exec "~/.config/sway/scripts/websearch"

}

set $screenshot SCREENSHOT
mode $screenshot {
    bindsym s mode "default", exec ~/.config/sway/scripts/take_screenshot
    bindsym t mode "default", exec ~/.config/sway/scripts/take_screenshot
    bindsym g mode "default", exec ~/.config/sway/scripts/copy_screenshot_path
    # Return to default mode
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

for_window [app_id="librewolf"] border none

set $network NETWORK
mode $network {
    bindsym e mode "default", exec "~/.config/sway/scripts/network_handler enable"
    bindsym d mode "default", exec "~/.config/sway/scripts/network_handler disable"
    bindsym s mode "default", exec "~/.config/sway/scripts/network_handler status" # query status
    bindsym q mode "default", exec "~/.config/sway/scripts/network_handler query" # query status
    # Return to default mode
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

include /etc/sway/config.d/*
